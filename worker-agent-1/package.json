{
  "name": "worker-agent-1",
  "version": "1.0.0",
  "description": "Worker agent 1 for NEAR Shade Agent coordination",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "DOTENV_CONFIG_PATH=.env.development.local tsx -r dotenv/config src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "docker:build": "sudo docker build --platform linux/amd64 -t manza/worker-agent-1:latest .",
    "docker:build:no-cache": "sudo docker build --no-cache --platform linux/amd64 -t manza/worker-agent-1:latest .",
    "docker:push": "sudo docker push manza/worker-agent-1",
    "phala:deploy": "phala cvms create --name worker-agent-1 --vcpu 1 --compose ./docker-compose.yaml --env-file ./.env.development.local"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "hono": "^4.8.4",
    "openai": "^6.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
